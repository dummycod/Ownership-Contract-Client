    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/index.js"></script>

    <title>Ownership Client</title>
  </head>
  <body>
    <h1>Upload Any File</h1>

    <div class="parent">
      <input type="file" id="formFile" class="form-control" />
      <h5>Enter owner name</h5>
      <input id="ownername" type="text" />
      <div class="button-container">
        <button id="submit" class="btn btn-primary" onclick="submit()">
          Submit
        </button>
        <button class="btn btn-primary" onclick="getInfo()">Get Info</button>
      </div>
      <div class="alert alert-primary" role="alert" id="alert">
        You can either submit file's details and get information about it.
      </div>
      <h1 class="transaction-heading">Live Transactions Mined</h1>
      <div id="transaction-list">
        <h6 id="no-tx">No transactions mined.</h6>
      </div>
    </div>
  </body>
</html>
